{
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "import/no-named-as-default": "off",
    "import/no-named-as-default-member": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsx-a11y/label-has-for": "off",
    "no-alert": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": "off",
    "quotes": [
      "error",
      "single"
    ],
    "react/button-has-type": "off",
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}